{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true 
  },
  "package": {
    "productName": "todolist",
    "version": "4.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": true
      },
      "app": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": [
          "**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "todolist.com.muquew.www",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "./APP",
        "./locales"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "width": 800,
        "height": 600,
        "transparent": true,
        "decorations": false,
        "skipTaskbar": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
