<Window x:Class="TodoList.WindowAlarm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoList"
        mc:Ignorable="d"
        Title="WindowAlarm" Height="450" Width="800" 
        Topmost="True" WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="闹钟时间到了！" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
            <Button Content="延长5分钟" Click="ExtendTimeButton_Click" Margin="10" />
            <Button Content="确定" Click="ConfirmButton_Click" Margin="10" />
        </StackPanel>
    </Grid>

</Window>
